extends ../../layout.jade
block contenido    
    div(class="container")
        h1 Mis imagenes
        for imagen in imagenes
            .white.border.tr.large-padding
                .row
                    .col-md-10
                        h2=imagen.title
                        img(src="/img/#{imagen._id}.#{imagen.extension}")
                    .col-md-2
                        a(href="/app/imagenes/#{imagen._id}/edit", class="right-space") Editar
                        form(action="/app/imagenes/#{imagen._id}?_method=DELETE", method="POST", class="link")
                            input(type="submit",value="Eliminar")